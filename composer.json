{
    "name": "task-tracker/api",
    "description": "TaskTracker REST API",
    "license": "proprietary",
    "require": {
        "php": "^7.2",
        "symfony/http-foundation": "^5.2",
        "symfony/routing": "^5.2",
        "symfony/validator": "^5.2",
        "illuminate/database": "^7.0",
        "illuminate/events": "^7.0",
        "pimple/pimple": "^3.5",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "fakerphp/faker": "^1.21",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "db:seed": "php database/seed.php",
        "test": "docker compose run --rm app vendor/bin/phpunit",
        "test:local": "docker compose run --rm app vendor/bin/phpunit"
    }
}
